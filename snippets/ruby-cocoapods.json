{
    "Pod": {
        "body": [
            "pod '${name}', '~> ${version}'"
        ],
        "description": "CocoaPods Pod Declaration - iOS Snippets",
        "prefix": "pod"
    },
    "Pod from Git Commit": {
        "body": [
            "pod '${name}', :git => '${repository}', :commit => '${sha}'"
        ],
        "description": "CocoaPods Pod from Git Commit Declaration - iOS Snippets",
        "prefix": "pod-git-commit"
    },
    "Pod from Git Tag": {
        "body": [
            "pod '${name}', :git => '${repository}', :tag => '${tag}'"
        ],
        "description": "CocoaPods Pod from Git Tag Declaration - iOS Snippets",
        "prefix": "pod-git-tag"
    },
    "Pod from Local Disk": {
        "body": [
            "pod '${name}', :path => '${path}'"
        ],
        "description": "CocoaPods Pod from Local Disk Declaration - iOS Snippets",
        "prefix": "pod-local-disk"
    },
    "Post Install": {
        "body": [
            "post_install do |installer|",
            "\t$0",
            "end"
        ],
        "description": "CocoaPods Post Install - iOS Snippets",
        "prefix": "post_install"
    },
    "Target": {
        "body": [
            "target '${name}' do",
            "\t$0",
            "end"
        ],
        "description": "CocoaPods Target Declaration - iOS Snippets",
        "prefix": "target"
    }
}
